<resources>
    <style name="AppTheme" parent="BaseTheme" />

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TweetTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">@dimen/eight_dp</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="TweetTimestampStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="AppTheme.TweetsList" parent="AppTheme">
    </style>
</resources>
